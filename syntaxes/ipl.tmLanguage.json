{
  "scopeName": "source.ipl",
  "name": "IPL",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#builtins" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#function_def" },
    { "include": "#function_call" },
    { "include": "#classes" },
    { "include": "#attributes" },
    { "include": "#self" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ipl",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ipl",
          "match": "\\b(if|elif|else|for|while|break|continue|return|class|def|import|in|and|or|not|is)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ipl",
          "match": "==|!=|<=|>=|<|>|\\+|\\-|\\*|\\/|%|="
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.ipl",
          "match": "\\b(out|random|round|pow|min|max|len|value)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ipl",
          "match": "\\b(True|False|None)\\b"
        }
      ]
    },
    "self": {
      "patterns": [
        {
          "name": "variable.language.self.ipl",
          "match": "\\bself\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.double.ipl",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.ipl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.triple.single.ipl",
          "begin": "'''",
          "end": "'''",
          "patterns": [
            {
              "name": "constant.character.escape.ipl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.ipl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ipl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ipl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ipl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ipl",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "function_def": {
      "patterns": [
        {
          "begin": "\\bdef\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "0": { "name": "keyword.control.ipl" },
            "1": { "name": "entity.name.function.ipl" }
          },
          "end": "\\)",
          "name": "meta.function.definition.ipl",
          "patterns": [
            {
              "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b",
              "name": "variable.parameter.ipl"
            },
            {
              "include": "#strings"
            }
          ]
        }
      ]
    },
    "function_call": {
      "patterns": [
        {
          "name": "support.function.call.ipl",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "meta.class.ipl",
          "begin": "\\bclass\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "beginCaptures": {
            "1": { "name": "entity.name.type.class.ipl" }
          },
          "end": ":|$",
          "patterns": [
            {
              "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b",
              "name": "variable.other.class.ipl"
            }
          ]
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "variable.other.member.ipl",
          "match": "\\.[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    }
  },
  "fileTypes": ["ipl"],
  "uuid": "c5e7ffbb-78ef-42ab-bc02-2f9f0d1a88bb"
}